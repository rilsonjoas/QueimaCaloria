    <left>
        <VBox prefHeight="533.0" prefWidth="150.0" style="-fx-background-color: #151515;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <Label onMouseClicked="#mostrarTelaAdminUsuarios" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Usuários" />
            <Label onMouseClicked="#mostrarTelaAdminDietas" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Dietas" />
            <Label onMouseClicked="#mostrarTelaAdminRefeicoes" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Refeições" />
            <Label onMouseClicked="#mostrarTelaAdminExercicios" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Exercícios" />
            <Label onMouseClicked="#mostrarTelaAdminMetas" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Metas" />
            <Label onMouseClicked="#mostrarTelaAdminTreinos" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Treinos" />
            <Label onMouseClicked="#logout" style="-fx-padding: 10; -fx-cursor: hand; -fx-text-fill: #d7d7d7; -fx-font-size: 16px; -fx-font-family: 'Gill Sans MT';" text="Sair" />

        </VBox>
    </left>
    <center>
        <StackPane fx:id="adminContentArea" prefHeight="400.0" prefWidth="650.0" style="-fx-background-color: #1a1922;" BorderPane.alignment="CENTER" />
    </center>
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #151515; -fx-padding: 10;" BorderPane.alignment="CENTER">
            <Label style="-fx-text-fill: #55c5f5;" text="YouFit - Administração" textFill="#55c5f5">
                <font>
                    <Font name="Gill Sans MT Bold" size="28.0" />
                </font>
                <padding>
                    <Insets left="20.0" />
                </padding>
            </Label>
        </HBox>
    </top>
