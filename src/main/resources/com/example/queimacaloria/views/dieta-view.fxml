<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="414.0" prefWidth="669.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.DietaController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="408.0" prefWidth="589.0" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="50.0">
           <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label text="Dietas" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
            </Label>

            <TableView fx:id="tabelaDietas" prefHeight="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="colunaNome" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Nome" />
                    <TableColumn fx:id="colunaObjetivo" prefWidth="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Objetivo" />
                    <TableColumn fx:id="colunaCalorias" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Calorias" />
                    <TableColumn fx:id="colunaProgresso" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Progresso" />
                </columns>
                 <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
            </TableView>

             <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#abrirTelaCriacaoDieta" style="-fx-background-color: #55c5f5;" text="Criar Nova Dieta" />
                <Button onAction="#realizarAtualizacaoDieta" style="-fx-background-color: #55c5f5;" text="Atualizar Dieta" />
                <Button onAction="#realizarRemocaoDieta" style="-fx-background-color: #55c5f5;" text="Remover Dieta" />
            </HBox>

            <!-- Detalhes da Dieta -->
            <VBox fx:id="detalhesDieta" alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10;">
                <Label text="Detalhes da Dieta" textFill="#55c5f5">
                    <font><Font name="Gill Sans MT" size="18.0" /></font>
                </Label>
                <Label fx:id="labelNomeDieta" text="Nome: " textFill="WHITE" />
                <Label fx:id="labelObjetivoDieta" text="Objetivo: " textFill="WHITE" />
                <Label fx:id="labelCaloriasDieta" text="Calorias: " textFill="WHITE" />
                <!-- Adicione mais detalhes conforme necessÃ¡rio -->

                <Button onAction="#voltarParaTelaPrincipal" style="-fx-background-color: #55c5f5;" text="Voltar" />
                <VBox.margin><Insets top="10" /></VBox.margin>
            </VBox>
            <Label fx:id="mensagemDieta" text="" textFill="RED" />
        </VBox>
    </children>
</AnchorPane>
