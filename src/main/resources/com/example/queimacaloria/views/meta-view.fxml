<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.MetaController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label text="Metas" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
            </Label>
            <TableView fx:id="tabelaMetas" prefHeight="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="colunaDescricao" prefWidth="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Descrição" />
                    <TableColumn fx:id="colunaTipo" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Tipo" />
                    <TableColumn fx:id="colunaProgresso" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Progresso" />
                    <TableColumn fx:id="colunaDataConclusao" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Conclusão" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#abrirTelaCriarMeta" style="-fx-background-color: #55c5f5;" text="Criar Nova Meta" />
                <Button onAction="#atualizarMeta" style="-fx-background-color: #55c5f5;" text="Atualizar Meta" />
                <Button onAction="#removerMeta" style="-fx-background-color: #55c5f5;" text="Remover Meta" />
            </HBox>

            <!-- Detalhes da Meta -->
            <VBox fx:id="detalhesMeta" alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10;">
                <Label text="Detalhes da Meta" textFill="#55c5f5">
                    <font><Font name="Gill Sans MT" size="18.0" /></font>
                </Label>
                <Label fx:id="labelDescricaoMeta" text="Descrição: " textFill="WHITE" />
                <Label fx:id="labelTipoMeta" text="Tipo: " textFill="WHITE" />
                <Label fx:id="labelProgressoMeta" text="Progresso: " textFill="WHITE" />
                <Label fx:id="labelDataConclusaoMeta" text="Conclusão: " textFill="WHITE" />

                <Button onAction="#voltarParaTelaPrincipal" style="-fx-background-color: #55c5f5;" text="Voltar" />
                <VBox.margin><Insets top="10" /></VBox.margin>
            </VBox>

            <Label fx:id="mensagemMeta" text="" textFill="RED" />
        </VBox>
    </children>
</AnchorPane>
