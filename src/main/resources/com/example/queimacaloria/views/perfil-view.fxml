<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.PerfilController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px; -fx-padding: 20;" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">

            <Label text="Perfil do Usuário" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </Label>

            <HBox alignment="CENTER" spacing="20.0">
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 150;">
                    <Label text="Nome" textFill="#55c5f5" />
                    <Label fx:id="labelNomeAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 150;">
                    <Label text="Email" textFill="#55c5f5" />
                    <Label fx:id="labelEmailAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 150;">
                    <Label text="Peso" textFill="#55c5f5" />
                    <Label fx:id="labelPesoAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 150;">
                    <Label text="Altura" textFill="#55c5f5" />
                    <Label fx:id="labelAlturaAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 150;">
                    <Label text="IMC" textFill="#55c5f5" />
                    <Label fx:id="labelIMCatual" text="--" textFill="WHITE" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="25.0">
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 130;">
                    <Label text="Cintura" textFill="#55c5f5" />
                    <Label fx:id="labelCinturaAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 130;">
                    <Label text="Bíceps" textFill="#55c5f5" />
                    <Label fx:id="labelBicepsAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 130;">
                    <Label text="Coxa" textFill="#55c5f5" />
                    <Label fx:id="labelCoxaAtual" text="--" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10; -fx-pref-width: 130;">
                    <Label text="Quadril" textFill="#55c5f5" />
                    <Label fx:id="labelQuadrilAtual" text="--" textFill="WHITE" />
                </VBox>

            </HBox>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>


                <Label text="Nome:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="campoNome" promptText="Nome" styleClass="campo-escuro" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label text="Peso (kg):" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="campoPeso" promptText="Peso" styleClass="campo-escuro" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                <Label text="Cintura (cm):" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="campoCintura" promptText="Cintura" styleClass="campo-escuro" GridPane.columnIndex="0" GridPane.rowIndex="5" />

                <Label text="Coxa (cm):" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="campoCoxa" promptText="Coxa" styleClass="campo-escuro" GridPane.columnIndex="0" GridPane.rowIndex="7" />


                <Label text="Email:" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="campoEmail" promptText="Email" styleClass="campo-escuro" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Altura (cm):" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="campoAltura" promptText="Altura" styleClass="campo-escuro" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Bíceps (cm):" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="campoBiceps" promptText="Bíceps" styleClass="campo-escuro" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Quadril (cm):" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <TextField fx:id="campoQuadril" promptText="Quadril" styleClass="campo-escuro" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            </GridPane>


            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#atualizarPerfil" style="-fx-background-color: #55c5f5;" text="Atualizar Perfil" />
            </HBox>

            <Button onAction="#voltarParaTelaPrincipal" style="-fx-background-color: WHITE" text="Voltar para a tela inicial" />

            <Label fx:id="mensagemPerfil" text="" textFill="RED" />
        </VBox>
    </children>
</AnchorPane>