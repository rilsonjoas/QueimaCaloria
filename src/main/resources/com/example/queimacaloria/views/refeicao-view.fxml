<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.RefeicaoController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label text="Refeições" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
            </Label>
            <TableView fx:id="tabelaRefeicoes" prefHeight="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="colunaNome" prefWidth="200.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Nome" />
                    <TableColumn fx:id="colunaCalorias" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Calorias" />
                    <TableColumn fx:id="colunaMacronutrientes" prefWidth="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Macros" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#abrirTelaCriarRefeicao" style="-fx-background-color: #55c5f5;" text="Criar Nova Refeição" />
                <Button onAction="#atualizarRefeicao" style="-fx-background-color: #55c5f5;" text="Atualizar Refeição" />
                <Button onAction="#removerRefeicao" style="-fx-background-color: #55c5f5;" text="Remover Refeição" />
            </HBox>

            <!-- Detalhes da Refeição -->
            <VBox fx:id="detalhesRefeicao" alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10;">
                <Label text="Detalhes da Refeição" textFill="#55c5f5">
                    <font><Font name="Gill Sans MT" size="18.0" /></font>
                </Label>
                <Label fx:id="labelNomeRefeicao" text="Nome: " textFill="WHITE" />
                <Label fx:id="labelCaloriasRefeicao" text="Calorias: " textFill="WHITE" />
                <Label fx:id="labelMacronutrientesRefeicao" text="Macronutrientes: " textFill="WHITE" />
                <VBox.margin><Insets top="10" /></VBox.margin>
            </VBox>
            <Button onAction="#voltarParaTelaPrincipal" style="-fx-background-color: #55c5f5;" text="Voltar para a Tela Inicial" />
            <Label fx:id="mensagemRefeicao" text="" textFill="RED" />
        </VBox>
    </children>
</AnchorPane>
