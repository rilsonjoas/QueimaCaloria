<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.TreinoController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px;" prefHeight="450.0" prefWidth="600.0">
            <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>
            <Label text="Treinos" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
            </Label>
            <TableView fx:id="tabelaTreinos" prefHeight="150.0"  style="-fx-background-color: #1a1922; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="colunaNome" prefWidth="150.0" text="Nome" style="-fx-background-color: #1a1922; -fx-text-fill: white;" />
                    <TableColumn fx:id="colunaTipoTreino" prefWidth="100.0" text="Tipo" style="-fx-background-color: #1a1922; -fx-text-fill: white;"/>
                    <TableColumn fx:id="colunaDuracao" prefWidth="75.0" text="Duração" style="-fx-background-color: #1a1922; -fx-text-fill: white;"/>
                    <TableColumn fx:id="colunaNivelDificuldade" prefWidth="75.0" text="Dificuldade"  style="-fx-background-color: #1a1922; -fx-text-fill: white;"/>
                    <TableColumn fx:id="colunaProgresso" prefWidth="75.0" text="Progresso" style="-fx-background-color: #1a1922; -fx-text-fill: white;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Criar Novo Treino" onAction="#abrirTelaCriarTreino" style="-fx-background-color: #55c5f5;"/>
                <Button text="Atualizar Treino" onAction="#atualizarTreino" style="-fx-background-color: #55c5f5;"/>
                <Button text="Remover Treino" onAction="#removerTreino" style="-fx-background-color: #55c5f5;"/>
            </HBox>

            <!-- Detalhes do Treino -->
            <VBox fx:id="detalhesTreino" alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10;">
                <Label text="Detalhes do Treino" textFill="#55c5f5">
                    <font><Font name="Gill Sans MT" size="18.0"/></font>
                </Label>

                <Label fx:id="labelNomeTreino" text="Nome: " textFill="WHITE"/>
                <Label fx:id="labelTipoTreino" text="Tipo: " textFill="WHITE"/>
                <Label fx:id="labelDuracaoTreino" text="Duração: " textFill="WHITE"/>
                <Label fx:id="labelDificuldadeTreino" text="Dificuldade: " textFill="WHITE" />
                <Label fx:id="labelExerciciosTreino" text="Exercícios: " wrapText="true"  textFill="WHITE"/>
                <Button text="Voltar" onAction="#voltarParaTelaPrincipal" style="-fx-background-color: #55c5f5;"/>
               <VBox.margin><Insets top="10"/></VBox.margin>
            </VBox>

            <Label fx:id="mensagemTreino" text="" textFill="RED"/>
        </VBox>
    </children>
</AnchorPane>