<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #1a1922;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.queimacaloria.controllers.TreinoController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #151515; -fx-border-width: 2px; -fx-border-color: #55c5f5; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Label text="Treinos" textFill="#d7d7d7">
                <font>
                    <Font name="Gill Sans MT" size="24.0" />
                </font>
            </Label>
            <TableView fx:id="tabelaTreinos" prefHeight="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="colunaNome" prefWidth="150.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Nome" />
                    <TableColumn fx:id="colunaTipoTreino" prefWidth="100.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Tipo" />
                    <TableColumn fx:id="colunaDuracao" prefWidth="75.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Duração" />
                    <TableColumn fx:id="colunaNivelDificuldade" prefWidth="75.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Dificuldade" />
                    <TableColumn fx:id="colunaProgresso" prefWidth="75.0" style="-fx-background-color: #1a1922; -fx-text-fill: white;" text="Progresso" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#abrirTelaCriarTreino" style="-fx-background-color: #55c5f5;" text="Criar Novo Treino" />
                <Button onAction="#atualizarTreino" style="-fx-background-color: #55c5f5;" text="Atualizar Treino" />
                <Button onAction="#removerTreino" style="-fx-background-color: #55c5f5;" text="Remover Treino" />
            </HBox>

            <!-- Detalhes do Treino -->
            <VBox fx:id="detalhesTreino" alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #1a1922; -fx-border-width: 1px; -fx-border-color: #55c5f5; -fx-border-radius: 5px; -fx-padding: 10;">
                <Label text="Detalhes do Treino" textFill="#55c5f5">
                    <font><Font name="Gill Sans MT" size="18.0" /></font>
                </Label>

                <Label fx:id="labelNomeTreino" text="Nome: " textFill="WHITE" />
                <Label fx:id="labelTipoTreino" text="Tipo: " textFill="WHITE" />
                <Label fx:id="labelDuracaoTreino" text="Duração: " textFill="WHITE" />
                <Label fx:id="labelDificuldadeTreino" text="Dificuldade: " textFill="WHITE" />
                <Label fx:id="labelExerciciosTreino" text="Exercícios: " textFill="WHITE" wrapText="true" />
                <Button onAction="#voltarParaTelaPrincipal" style="-fx-background-color: #55c5f5;" text="Voltar" />
               <VBox.margin><Insets top="10" /></VBox.margin>
            </VBox>

            <Label fx:id="mensagemTreino" text="" textFill="RED" />
        </VBox>
    </children>
</AnchorPane>
